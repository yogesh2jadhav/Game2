<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    >
    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainSplashSreen"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash1"/>
    </LinearLayout-->

    <LinearLayout
        android:id="@+id/MainLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerbg"
        android:padding="@dimen/common_p">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_score"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Score"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_timer"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Timer"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MainLinear2"
        android:layout_width="match_parent"
        android:background="#ffec00"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/common_p">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Best Score :"
                    android:width="60dp"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bestScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_p"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Score :"
                    android:width="60dp"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/correctAns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_p"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wrong Clicks :"
                    android:width="60dp"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/wrongAns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!--ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:max="60"
                android:progress="10"
                android:progressDrawable="@drawable/trmnl_loadingprogressbar" /-->
            <ProgressBar
                android:id="@+id/circularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circlebardesign"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/countDownTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="33sp"
                android:textColor="#000"
                android:text="00" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/MainLinear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc500"
        android:divider="@drawable/keyboarddivider"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/ans1"
            style="@style/nextnumber"
            android:text="1" />

        <TextView
            android:id="@+id/ans2"
            style="@style/nextnumber"
            android:text="2" />

        <TextView
            android:id="@+id/ans3"
            style="@style/nextnumber"
            android:text="3" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/MainLinear4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <!--<ImageView
            android:layout_height="10pt"
            android:layout_width="match_parent"
            android:id="@+id/timerImage"
            android:layout_marginTop="10px"
            android:src="@drawable/download1"/>-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:divider="@drawable/keyboarddivider"
            android:orientation="vertical"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/keyboarddivider"
                android:showDividers="middle">

                <Button
                    android:id="@+id/a0"
                    style="@style/keyboardbtn"
                    android:tag="0"
                    android:text="1" />

                <Button
                    android:id="@+id/a1"
                    style="@style/keyboardbtn"
                    android:tag="1"
                    android:text="2" />

                <Button
                    android:id="@+id/a2"
                    style="@style/keyboardbtn"
                    android:tag="2"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/keyboarddivider"
                android:showDividers="middle">

                <Button
                    android:id="@+id/a3"
                    style="@style/keyboardbtn"
                    android:tag="3"
                    android:text="4" />

                <Button
                    android:id="@+id/a4"
                    style="@style/keyboardbtn"
                    android:tag="4"
                    android:text="5" />

                <Button
                    android:id="@+id/a5"
                    style="@style/keyboardbtn"
                    android:tag="5"
                    android:text="6" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/keyboarddivider"
                android:showDividers="middle">

                <Button
                    android:id="@+id/a6"
                    style="@style/keyboardbtn"
                    android:tag="6"
                    android:text="7" />

                <Button
                    android:id="@+id/a7"
                    style="@style/keyboardbtn"
                    android:tag="7"
                    android:text="8" />

                <Button
                    android:id="@+id/a8"
                    style="@style/keyboardbtn"
                    android:tag="8"
                    android:text="9" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/MainLinear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/keyboarddivider"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:showDividers="middle">

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/footerbtn_h"
            android:layout_weight="1"
            android:background="@drawable/commonbtn"
            android:onClick="clickedShare"
            android:text="Share Score"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/startGame"
            android:layout_width="132dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/commonbtn"
            android:onClick="restartGame"
            android:text="Start Game"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/restart"
            android:layout_width="132dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/commonbtn"
            android:onClick="startGame"
            android:text="Restart Game"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>